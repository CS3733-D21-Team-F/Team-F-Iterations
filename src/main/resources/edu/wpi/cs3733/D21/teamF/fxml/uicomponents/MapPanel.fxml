<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane fx:id="scroll" prefHeight="442.0" prefWidth="521.0" stylesheets="/stylesheets/NodeEditorScrollPaneStyle.css">
               <content>
                  <Pane fx:id="canvas" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <ImageView fx:id="map" fitHeight="392.0" fitWidth="520.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
               </content>
            </ScrollPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                           <children>
                              <Label text="Floor:" textAlignment="CENTER">
                                 <font>
                                    <Font name="Tahoma" size="13.0" />
                                 </font>
                              </Label>
                              <JFXComboBox fx:id="floorComboBox" onAction="#handleFloorBoxAction" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="38.0" prefWidth="186.0" spacing="5.0">
                           <children>
                              <Label text="Zoom Level:">
                                 <font>
                                    <Font name="Tahoma" size="18.0" />
                                 </font>
                              </Label>
                              <JFXButton fx:id="zoomInButton" buttonType="RAISED" onAction="#handleZoom" ripplerFill="WHITE" text="+" stylesheets="/stylesheets/DefaultButtonStyle.css">
                                 <font>
                                    <Font size="19.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="zoomOutButton" buttonType="RAISED" onAction="#handleZoom" ripplerFill="WHITE"  text="-" stylesheets="/stylesheets/DefaultButtonStyle.css">
                                 <font>
                                    <Font size="19.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</fx:root>
